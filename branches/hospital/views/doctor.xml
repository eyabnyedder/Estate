<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- tree view -->
        <record id="doctor_tree" model="ir.ui.view">
            <field name="name">hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ref"/>
                    <field name="name"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <!-- kanban view -->
        <record id="doctor_kanban" model="ir.ui.view">
            <field name="name">hospital.doctor.kanban</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="gender"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
                                    <i class="fa fa-user" role="img" title="doctor"></i>
                                    <br/>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="image" widget="image" class="oe_avatar"/>
                                <hr class="mt4 mb4"/>
                                <div class="row" t-if="!selection_mode">
                                    <div class="col-6 text-center">
                                        <span t-esc="record.gender.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- form view -->
        <record id="doctor_form" model="ir.ui.view">
            <field name="name">hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <h1>
                                <field name="ref" readonly="1"/>
                            </h1>
                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <field name="gender"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids" option="{'post_refresh':'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- search view -->
        <record id="doctor_search" model="ir.ui.view">
            <field name="name">hospital.doctor.search</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|',('name', 'ilike', self), ('ref', 'ilike', self)]"/>
                    <field name="gender"/>
                    <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                    <separator/>
                    <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>
                </search>
            </field>
        </record>
    </data>
</odoo>