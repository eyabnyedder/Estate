<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="invoice_filter_view" model="ir.ui.view">
            <field name="name">view_account_invoice_filter.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <group expand="0" string="Group By">
                        <filter name="group_by_partner_id" string="Partner" context="{'group_by': 'partner_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view_move_form.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="inside">
                    <field name="partner_id"/>
                </xpath>
<!--                <xpath expr="//sheet/group/group" position="attribute">-->
<!--                    <label name="invoice_date" invisible="0"/>-->
<!--                    <field name="invoice_date" invisible="0"/>-->
<!--                </xpath>-->
            </field>
        </record>


